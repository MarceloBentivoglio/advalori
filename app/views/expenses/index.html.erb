<div class="container">
  <table class="table">
    <%= link_to "Add Expense", new_user_expense_path, class: "btn btn-primary btn-md pull-right" %>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Expense</th>
        <th scope="col">Value</th>
        <th scope="col">Due Date</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <th scope="row"><%= expense.id %></th>
          <td><%= expense.supplier %></td>
          <td><%= expense.value %></td>
          <td><%= expense.due_date %></td>
          <td>
            <%= link_to(user_expenses_path, class: "btn btn-info btn-xs") do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <% end %>
            <%= link_to(user_expenses_path, class: "btn btn-danger btn-xs") do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
           </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="chart">
    <%= line_chart expenses_chart_path %>
  </div>

  <div class="chart">
    <%= line_chart calc_expenses_chart_path %>
  </div>

</div>
