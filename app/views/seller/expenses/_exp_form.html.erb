<div class="row">
  <div class="col col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

    <%= simple_form_for [:seller, @expense] do |f| %>
      <%= f.input :supplier %>
      <%= f.input :value, as: :string, input_html:{ class:"money", value: "#{'%.02f' % @expense.value}"} %>
      <%= f.input :due_date, as: :date %>
      <%= f.submit "Add Expense", class: "btn-expense", id: 'submit-expense' %>
    <% end %>

  </div>

</div>
