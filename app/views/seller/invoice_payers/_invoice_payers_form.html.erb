<div class="row">
  <div class="col col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

    <%= simple_form_for @invoice_payer, url: seller_invoice_payers_path do |f| %>
    <%= f.input :cnpj, input_html:{ id:"cnpj", placeholder: "00.000.000/0000-00"}%>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :address_number %>
    <%= f.input :address_complement %>
    <%= f.input :neighborhood %>
    <%= f.input :state, as: :select, input_html:{ id:"estado"}%>
    <%= f.input :city, as: :select, input_html:{ id:"cidade"} %>
    <%= f.input :zip_code, input_html:{ id:"zip_code", placeholder:"00000-000"} %>
    <%= f.input :phone_number ,input_html:{ id:"phone", placeholder:"(00) 0000-0000"}%>

    <%= f.submit "Save Infos", class: "btn btn-primary" %>

    <% end %>
  </div>
