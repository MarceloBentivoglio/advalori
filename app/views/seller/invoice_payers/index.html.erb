<div id="customer-wrapper" class="container">
  <div class="row text-center">
    <h5>Invoice Payers</h5>
    <table class="table table-striped th-invoice">
      <thead>
        <tr>
          <th>CNPJ</th>
          <th>Name</th>
          <th>Phone Number</th>
          <th>Address</th>
          <th>Address Number</th>
          <th>Neighborhood</th>
          <th>City</th>
          <th>State</th>
          <th>Zip Code</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @invoice_payers.each do |invoice_payer| %>
        <tr class="tr-highlight-overdue td-invoice">
          <td><%= invoice_payer.cnpj %></td>
          <td class="nowrap"><%= invoice_payer.name %></td>
          <td><%= invoice_payer.phone_number%></td>
          <td class="nowrap"><%= invoice_payer.address %></td>
          <td><%= invoice_payer.address_number %></td>
          <td class="nowrap"><%= invoice_payer.neighborhood %></td>
          <td class="nowrap"><%= invoice_payer.city%></td>
          <td><%= invoice_payer.state %></td>
          <td><%= invoice_payer.zip_code%></td>
          <td>
            <%= link_to(edit_seller_invoice_payer_path(invoice_payer), class: "btn btn-info btn-xs") do %>
            <i class="fa fa-pencil-square-o"></i>
            <% end %>
          </td>
          <td>
            <%= link_to(seller_invoice_payer_path(invoice_payer), class: "btn btn-danger btn-xs", method: :delete, "data-confirm" => "Are you sure?" ) do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "New Customer", new_seller_invoice_payer_path, class: "btn btn-primary btn-md pull-right" %>
  </div>
</div>
</div>
</div>


