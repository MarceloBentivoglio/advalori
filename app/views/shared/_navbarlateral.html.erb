<div class="wrapper">
  <div class="side-bar">
    <ul class="list-group">
      <li class="menu-head">
        <%= link_to root_path do %>
        <%= cl_image_tag ("http://res.cloudinary.com/mbentivoglio/image/upload/v1511372762/Advalori/Logomakr_6yM3k1.png"), width: 120 %>
        <% end %>
        <a href="#" class="push_menu">
          <span class="glyphicon glyphicon-align-justify pull-right"></span>
        </a>
      </li>
      <div class="menu">
        <li>
          <%= link_to user_path do %>
           <%= t(".profile", default: "Dashboard") %>
           <i class="fa fa-dashboard fa-adjusted"></i>
          <% end %>
        </li>

        <% if current_user.is_seller? %>
          <li>
            <%= link_to seller_invoice_payers_path do %>
              <%= t(".profile", default: "Customers") %>
              <i class="fa fa-handshake-o fa-adjusted"></i>
            <% end %>
          </li>

          <li>
            <%= link_to seller_expenses_path do %>
              <%= t(".profile", default: "Expenses") %>
              <i class="fa fa-money fa-adjusted"></i>
            <% end %>
          </li>
        <% end %>

        <li role="presentation" class="dropdown" id="drop">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            My Profile <i class="fa fa-user-circle fa-adjusted"></i> <span class="caret"></span>
          </a>
          <ul class="dropdown-spec hidden">
            <li>
              <%= link_to edit_user_registration_path do %>
              <%= t(".profile", default: "Edit My Info") %>
              <i class="fa fa-pencil-square-o fa-adjusted"></i>
              <% end %>
            </li>
             <li>
              <%= link_to new_seller_path do %>
                <%= t(".profile", default: "Edit Business Info") %>
                <i class="fa fa-building fa-adjusted" ></i>
              <% end %>
            </li>
          </ul>
        </li>
        <li>
            <%= link_to seller_invoices_path do %>
              <%= t(".profile", default: "Invoices") %>
              <i class="fa fa-list-alt fa-adjusted "></i>
            <% end %>
        </li>
      </div>
    </ul>
  </div>
</div>

